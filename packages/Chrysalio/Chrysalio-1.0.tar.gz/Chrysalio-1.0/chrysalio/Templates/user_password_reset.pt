<metal:main use-macro="load: ${layout}"
            xmlns:tal="http://xml.zope.org/namespaces/tal"
            xmlns:metal="http://xml.zope.org/namespaces/metal">

  <div metal:fill-slot="form_begin" tal:omit-tag="">${form.begin()}</div>

  <div id="cioContainer" metal:fill-slot="container">
    <div id="cioPassword">
      <div class="cioText">${_('Enter your new password:')}</div>
      <div tal:define="flash load: flash.macro.pt" metal:use-macro="flash"/>
      <div>
        ${form.grid_password('password1', _('Password:'), clear=True)}
        ${form.grid_password('password2', _('Confirmation:'), clear=True)}
      </div>
      <div>
        ${form.submit('sav!.x', _('Change'))}
        ${form.button(route('login'), _('Cancel'))}
      </div>
    </div>
  </div>

  <div metal:fill-slot="form_end" tal:omit-tag="">${form.end()}</div>
</metal:main>
