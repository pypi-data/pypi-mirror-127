<metal:main use-macro="load: ${layout}"
            xmlns:tal="http://xml.zope.org/namespaces/tal"
            xmlns:metal="http://xml.zope.org/namespaces/metal">

  <div metal:fill-slot="form_begin" tal:omit-tag="">${form.begin()}</div>

  <div id="cioContainer" metal:fill-slot="container">
    <div id="cioPassword">
      <div class="cioText">
        ${_('Enter the email associated with your account to reset your password.')}
      </div>
      <div>
        <span class="cioButtonInput">
          ${form.text('email', placeholder=_('email address'))}
          ${form.submit('submit', _('Reset password'))}
        </span>
        <span class="cioError" tal:condition="form.has_error('email')">
          ${form.error('email')}
        </span>
        <span class="cioError" tal:condition="request.session.peek_flash('alert')"
              tal:repeat="message request.session.pop_flash('alert')"
              >${message}</span>
      </div>
      <div class="cioBack">
        <a href="${route('login')}" class="cioButton">${_('Back')}</a>
      </div>
    </div>

  </div>

  <div metal:fill-slot="form_end" tal:omit-tag="">${form.end()}</div>
</metal:main>
